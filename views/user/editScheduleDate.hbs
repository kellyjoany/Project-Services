<div class="container">
<div class="row h-100 align-self-center">
    <div class="col-md-4"></div>
      <div class="col-md-4">
        <h5>Edit Schedule</h5>
          <form onsubmit="return validateMyFormScheduleEdited();" action="/user/painel/edited" method="post">
              <input type="hidden" value="{{edit._id}}" name="idEditSchedule">
              <input id="stIdEdit" type="hidden" value="{{edit.stores}}" name="idEditStore">
              <div class="form-group">
                <label for="">Date:</label>
                <input id="dateEdit" type="text" value="{{edit.bookingDay}}" name="dateEdit" class="flatpickr"> 
              </div>
              <div class="form-group">
              <label for="">Choose the Hour:</label>
              <select id="stHrEdit" value="{{edit.bookingHour}}" name="hourEdit">
                   <option value="" disabled selected>Choose the hour</option> 
              </select>
              </div>  
              <button class="btn btn-primary" type="submit">Schedule</button>
          </form>    
      </div>
    <div class="col-md-4"></div>    
</div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
<script>
  function validateMyFormScheduleEdited(){
    alert("Schedule Edited!");
    return true;
  }
 
  flatpickr('.flatpickr',{
    minDate: new Date(),
    dateFormat: 'd/m/Y'
  }) 

 
 </script> 
