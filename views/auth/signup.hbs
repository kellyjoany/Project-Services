<div class="container">
<div class="row h-100 align-self-center">
    <div class="col s4"></div>
      <div class="col s4 my-auto"> 
      <form onsubmit="return validateMyForm();" action="/auth/signup" method="post">
      <h2>Register</h2>
        <div class="form-group">
          <label class="mr-2" for="">Name:</label>
          <input type="text" name="name" required>
        </div>
        <div class="form-group">
          <label class="mr-2" for="">Email:</label>
          <input type="text" name="email" required>
        </div> 
        <div class="form-group">
          <label class="mr-2" for="">Login:</label>
          <input type="text" name="username" required>
        </div>
        <div class="form-group">
          <label for="">Password:</label>
          <input type="password" name="password" placeholder="********" required>
        </div>  
        <div class="form-group">
        <select id="test" onchange="showDiv(this)" name="profile">
          <option value="" disabled selected>You are:</option>
          <option value="1">User</option> 
          <option value="2">Manager</option> 
        </select>
        </div>
          <div id="hidden_div" style="display:none;" class="form-group">
          <label class="mr-2" for="">Store:</label>
          <input type="text" name="nameStore">
        </div> 
        <button type="submit" class="btn btn-primary">Register</button>
      </form>
    </div>
  <div class="col s4"></div>    
</div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
 <script>
  $(document).ready(function() {
    $('select').formSelect();
  });
 
  function showDiv(select){
   if(select.value==2){
    document.getElementById('hidden_div').style.display = "block";
   } else{
    document.getElementById('hidden_div').style.display = "none";
   }
  }

  function validateMyForm(){
    alert("Register Done!");
    return true;
  }
 
 </script>
  