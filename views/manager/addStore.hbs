<div class="container">
<div class="row h-100 center">
    <div class="col-md-4"></div>
      <div class="col-md-4 center"> 
          <form onsubmit="return validateMyForm();" action="/manager/store" method="post">
            <h5>Register new Store</h5>
            <div class="form-group">
              <label for="">Name:</label>
              <input class="ml-3" type="text" name="name" required>
            </div>
            <div class="form-group">
              <label for="">Address:</label>
              <input type="text" name="address" required>
            </div>  
            <div class="form-group">
              <label for="">Number:</label>
              <input class="ml-1" type="text" name="number" required>
            </div>
            <div class="form-group">
              <label for="">District:</label>
              <input class="ml-3" type="text" name="district" required>
            </div>
            <div class="form-group">
              <label for="">City:</label>
              <input class="ml-4" type="text" name="city" required>
            </div>
            <div class="form-group">
              <label for="">State:</label>
              <input class="ml-4" type="text" name="state" required>
            </div>        
            <div class="form-group">
              <label for="">Code:</label>
              <input class="ml-4" type="text" name="zipCode" required>
            </div>
            <button class="btn btn-primary" type="submit">Register</button>
          </form>
      </div>
    <div class="col-md-4"></div>    
</div>
</div>

<script>
  function validateMyForm(){
    alert("Register Done!");
    return true;
  }
</script>
 